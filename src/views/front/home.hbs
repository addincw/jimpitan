{{#content "styles"}}
	<style>
		.column-sticky-left { position: sticky; left: 0; z-index: 1;
		min-width:160px; max-width:160px; } @media screen and (min-width: 768px) {
		.column-sticky-left { min-width: 220px; max-width: 220px; } }
	</style>
{{/content}}

<section class="banner bg-gradient-seagreen py-80 px-3">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1 class="fs-6 fw-normal">
					<span class="banner-highlight-text d-block fw-semibold py-2">
						Jimpitan, Gotong Royong Bantu Sesama
					</span>
				</h1>

				<p class="mb-50">
					<b>Website</b>
					untuk mengelola dan pelaporan hasil
					<b>jimpitan</b>
					warga, melanjutkan
					<b>kearifan lokal dengan pemanfaatan teknologi</b>. Informasi lebih
					lanjut, hubungi kami melaui chat WhatsApp
				</p>

				<button class="btn btn-lg btn-gradient-pearlgreen rounded-pill">
					<i class="bi bi-whatsapp me-1"></i>
					Chat WhatsApp
				</button>
			</div>
		</div>
	</div>
</section>

<!-- experiences -->
<section class="experience py-80">
	<div class="experience-content container">
		<h2
			class="underline underline-center"
			style="margin: 0px auto 45px; width: 70%"
		>
			Hidup Rukun dan Harmonis dengan Bantu Sesama
		</h2>
		<p class="mb-50">
			Menghimpun warga mulai dari RT, RW. Jimpitan diberikan secara sukarela
			dari warga, dikelola oleh warga dan untuk membantu sesama warga.
		</p>

		<div class="statistics d-flex justify-content-center">
			<div class="statistic">
				<div class="label">6+</div>
				Rukun Warga
			</div>
			<div class="statistic">
				<div class="label">45+</div>
				Rukun Tetangga
			</div>
			<div class="statistic">
				<div class="label">85+</div>
				Kepala Keluarga
			</div>
		</div>
	</div>

	<img
		class="experience-bg"
		src="/img/bg-stacks.png"
		role="presentation"
		width="1440"
		height="316"
	/>
</section>

<!-- statistics -->
<section
	x-data="{
		daysEachMonths: {{stringify daysEachMonths}} ?? [],
		init() {
			const ctx = document.getElementById('jimpitan-statistics');
			const labels = this.daysEachMonths.map((month) => month.month.replace('20', ''));

			new Chart(ctx, {
				type: 'bar',
				data: {
					labels,
					datasets: [
						{
							label: 'RT 04',
							data: [12000, 19000, 3000, 5000, 2000, 3000],
							borderWidth: 1,
							backgroundColor: 'rgba(21, 128, 64, 0.1)',
						},
						{
							label: 'RT 05',
							data: [19000, 3000, 5000, 12000, 2000, 3000],
							borderWidth: 1,
						},
					]
				},
				options: {
					scales: {
						y: {
							beginAtZero: true
						}
					}
				}
			});
		},
	}"
	class="project"
>
	<div class="container py-80">
		<h2 class="underline">Grafik Pengumpulan Jimpitan Warga</h2>
		<p class="mb-50">
			Hasil pengumpulan jimpitan warga dikelompokkan berdasarkan RT dan RW.
			Dapat di filter berdasarkan RT, RW, dan bulan
		</p>

		<div class="mt-3 pb-3">
			<div class="d-flex align-items-center justify-content-end">
				<a
					class="btn btn-primary"
					data-bs-toggle="collapse"
					href="#collapse-jimpitan-statistic-filter"
					role="button"
					aria-expanded="true"
					aria-controls="collapse-jimpitan-statistic-filter"
				>
					<i class="bi bi-funnel me-1"></i>
					Filter Riwayat
				</a>
			</div>

			<div class="collapse show" id="collapse-jimpitan-statistic-filter">
				<div class="mt-3 card card-body">
					<form class="row g-3">
						<div class="col-6 col-md-auto">
							<label for="rw" class="form-label">RW</label>
							<select class="form-select" name="rw" aria-label="Pilih RW">
								<option selected>Pilih RW</option>
								<option value="1">One</option>
								<option value="2">Two</option>
								<option value="3">Three</option>
							</select>
						</div>
						<div class="col-6 col-md-auto">
							<label for="rt" class="form-label">RT</label>
							<select class="form-select" name="rt" aria-label="Pilih RT">
								<option selected>Pilih RT</option>
								<option value="1">One</option>
								<option value="2">Two</option>
								<option value="3">Three</option>
							</select>
						</div>
					</form>
				</div>
			</div>
		</div>

		<div class="table-responsive">
			<canvas id="jimpitan-statistics"></canvas>
		</div>
	</div>
</section>

<!-- reports -->
<section
	x-data="{ daysEachMonths: {{stringify daysEachMonths}} }"
	class="py-80"
>
	<div class="container">
		<h2 class="underline">Riwayat Jimpitan Warga</h2>
		<p class="mb-50">
			Riwayat Jimpitan tiap Warga dikelompokkan berdasarkan RT dan RW. Dapat di
			filter berdasarkan RT, RW, dan KK
		</p>

		<div class="mt-3 pb-3">
			<div class="d-flex align-items-center justify-content-between">
				<div class="row g-3 align-items-center">
					<div class="col-auto">
						<label for="inputPassword6" class="col-form-label">Show</label>
					</div>
					<div class="col-auto">
						<select
							class="form-select"
							name="per_page"
							aria-label="Data per halaman"
						>
							<option value="10" selected>10</option>
							<option value="20">20</option>
							<option value="30">30</option>
						</select>
					</div>
					<div class="col-auto">
						<span class="form-text">Entries</span>
					</div>
				</div>

				<a
					class="btn btn-primary"
					data-bs-toggle="collapse"
					href="#collapse-jimpitan-report-filter"
					role="button"
					aria-expanded="true"
					aria-controls="collapse-jimpitan-report-filter"
				>
					<i class="bi bi-funnel me-1"></i>
					Filter Riwayat
				</a>
			</div>

			<div class="collapse show" id="collapse-jimpitan-report-filter">
				<div class="mt-3 card card-body">
					<form class="row g-3">
						<div class="col-12 col-sm-auto">
							<label for="rw" class="form-label">RW</label>
							<select class="form-select" name="rw" aria-label="Pilih RW">
								<option selected>Pilih RW</option>
								<option value="1">One</option>
								<option value="2">Two</option>
								<option value="3">Three</option>
							</select>
						</div>
						<div class="col-12 col-sm-auto">
							<label for="rt" class="form-label">RT</label>
							<select class="form-select" name="rt" aria-label="Pilih RT">
								<option selected>Pilih RT</option>
								<option value="1">One</option>
								<option value="2">Two</option>
								<option value="3">Three</option>
							</select>
						</div>
						<div class="col-12 col-sm-auto">
							<label for="resident" class="form-label">Warga</label>
							<input
								type="text"
								name="resident"
								class="form-control"
								placeholder="Nama Warga. Min: 3 char"
								aria-label="warga"
							/>
						</div>
					</form>
				</div>
			</div>
		</div>

		<div class="table-responsive mb-2">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th scope="col" class="column-sticky-left" rowspan="3">Warga</th>
						<template x-for="month in daysEachMonths">
							<th
								class="text-center"
								x-bind:colspan="month.days"
								x-text="month.month"
							></th>
						</template>
					</tr>
					<tr>
						<template x-for="month in daysEachMonths">
							<template x-for="i in month.days">
								<th scope="col" class="text-center" x-text="i"></th>
							</template>
						</template>
					</tr>
				</thead>
				<tbody>
					<template x-for="row in 10">
						<tr>
							<td class="column-sticky-left">
								<div class="fw-bold text-truncate">
									Irawan Achmad Irawan Achmad Irawan Achmad
								</div>
								RT 04, RW 01
							</td>
							<template x-for="month in daysEachMonths">
								<template x-for="i in month.days">
									<td class="text-center text-light text-success">
										<i class="bi bi-check-square-fill"></i>
									</td>
								</template>
							</template>
						</tr>
					</template>
				</tbody>
			</table>
		</div>

		<nav
			class="d-flex flex-column flex-md-row align-items-center justify-content-between"
			aria-label="Paginasi Riwayat Jimpitan Warga"
		>
			<p>Showing 1 to 10 of 57 entries</p>
			<ul class="pagination">
				<li class="page-item"><a class="page-link" href="#">Previous</a></li>
				<li class="page-item active" aria-current="page">
					<a class="page-link" href="#">1</a>
				</li>
				<li class="page-item"><a class="page-link" href="#">2</a></li>
				<li class="page-item"><a class="page-link" href="#">3</a></li>
				<li class="page-item"><a class="page-link" href="#">Next</a></li>
			</ul>
		</nav>
	</div>
</section>

<!-- contact form -->

<!-- contact -->
<section class="bg-gradient-seagreen py-80">
	<div class="container">
		<h2 class="underline">Contact Us</h2>
		<p class="mb-50">
			Apabila ada pertanyaan, kritik, maupun saran yang ingin anda sampaikan,
			silahkan isi form berikut. Anda akan diarahkan ke chat WhatsApp customer
			service kami.
		</p>

		<form>
			<div class="row mb-3">
				<div class="col-md-6 mb-3 mb-md-0">
					<div class="form-group">
						<label for="name">Name</label>
						<input
							type="text"
							class="form-control"
							name="name"
							placeholder="Your name"
						/>
					</div>
				</div>
				<div class="col-md-6"></div>
			</div>

			<div class="form-group mb-3">
				<label for="subject">Subject</label>
				<input
					type="text"
					class="form-control"
					name="subject"
					placeholder="Your subject"
				/>
			</div>
			<div class="form-group mb-50">
				<label for="message">Message</label>
				<textarea
					class="form-control"
					name="message"
					placeholder="Your message"
					style="min-height: 140px"
				></textarea>
			</div>

			<button
				type="submit"
				class="btn btn-lg btn-gradient-pearlgreen rounded-pill"
			>
				<i class="bi bi-whatsapp me-1"></i>
				Chat WhatsApp
			</button>
		</form>
	</div>
</section>

{{#content "scripts"}}
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script
		defer
		src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
	></script>
{{/content}}