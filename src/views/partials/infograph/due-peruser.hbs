<div class="mt-3 pb-3">
	<div class="d-flex align-items-center justify-content-between">
		<div class="row g-3 align-items-center">
			<div class="col-auto">
				<label for="inputPassword6" class="col-form-label">Show</label>
			</div>
			<div class="col-auto">
				<select
					class="form-select"
					name="per_page"
					aria-label="Data per halaman"
				>
					<option value="10" selected>10</option>
					<option value="20">20</option>
					<option value="30">30</option>
				</select>
			</div>
			<div class="col-auto">
				<span class="form-text">Entries</span>
			</div>
		</div>

		<a
			class="btn btn-primary"
			data-bs-toggle="collapse"
			href="#collapse-jimpitan-report-filter"
			role="button"
			aria-expanded="true"
			aria-controls="collapse-jimpitan-report-filter"
		>
			<i class="bi bi-funnel me-1"></i>
			Filter Riwayat
		</a>
	</div>

	<div class="collapse show" id="collapse-jimpitan-report-filter">
		<div class="mt-3 card card-body">
			<form class="row g-3">
				<div class="col-12 col-sm-auto">
					<label for="rw" class="form-label">RW</label>
					<select class="form-select" name="rw" aria-label="Pilih RW">
						<option selected>Pilih RW</option>
						<option value="1">One</option>
						<option value="2">Two</option>
						<option value="3">Three</option>
					</select>
				</div>
				<div class="col-12 col-sm-auto">
					<label for="rt" class="form-label">RT</label>
					<select class="form-select" name="rt" aria-label="Pilih RT">
						<option selected>Pilih RT</option>
						<option value="1">One</option>
						<option value="2">Two</option>
						<option value="3">Three</option>
					</select>
				</div>
				<div class="col-12 col-sm-auto">
					<label for="resident" class="form-label">Warga</label>
					<input
						type="text"
						name="resident"
						class="form-control"
						placeholder="Nama Warga. Min: 3 char"
						aria-label="warga"
					/>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="table-responsive mb-2">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th scope="col" class="column-sticky-left" rowspan="3">Warga</th>
				<template x-for="month in daysEachMonths">
					<th
						class="text-center"
						x-bind:colspan="month.days"
						x-text="month.month"
					></th>
				</template>
			</tr>
			<tr>
				<template x-for="month in daysEachMonths">
					<template x-for="i in month.days">
						<th scope="col" class="text-center" x-text="i"></th>
					</template>
				</template>
			</tr>
		</thead>
		<tbody>
			<template x-for="row in 10">
				<tr>
					<td class="column-sticky-left">
						<div class="fw-bold text-truncate">
							Irawan Achmad Irawan Achmad Irawan Achmad
						</div>
						RT 04, RW 01
					</td>
					<template x-for="month in daysEachMonths">
						<template x-for="i in month.days">
							<td class="text-center text-light text-success">
								<i class="bi bi-check-square-fill"></i>
							</td>
						</template>
					</template>
				</tr>
			</template>
		</tbody>
	</table>
</div>

<nav
	class="d-flex flex-column flex-md-row align-items-center justify-content-between"
	aria-label="Paginasi Riwayat Jimpitan Warga"
>
	<p>Showing 1 to 10 of 57 entries</p>
	<ul class="pagination">
		<li class="page-item"><a class="page-link" href="#">Previous</a></li>
		<li class="page-item active" aria-current="page">
			<a class="page-link" href="#">1</a>
		</li>
		<li class="page-item"><a class="page-link" href="#">2</a></li>
		<li class="page-item"><a class="page-link" href="#">3</a></li>
		<li class="page-item"><a class="page-link" href="#">Next</a></li>
	</ul>
</nav>