<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{{title}}{{#if appName}} | {{/if}}{{appName}}</title>
		<link rel="stylesheet" href="/css/front.css" />
		<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
		<script
			defer
			src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
		></script>
	</head>
	<body class="home">
		<nav class="navbar navbar-transparent navbar-expand-lg">
			<div class="container">
				<a class="navbar-brand brand-title" href="/">{{appName}}</a>
				<!-- desktop only -->
				<div class="d-none d-lg-block flex-grow-0">
					<div class="navbar-nav">
						<a class="nav-link active" aria-current="page" href="/">Home</a>
						<a class="nav-link" href="/admin/login">Login</a>
					</div>
				</div>
				<!-- mobile only -->
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="offcanvas"
					data-bs-target="#navbarNavAltMarkup"
					aria-controls="navbarNavAltMarkup"
					aria-expanded="false"
					aria-label="Toggle navigation"
				>
					<i class="bi bi-list"></i>
				</button>
				<div
					class="d-lg-none offcanvas offcanvas-start"
					tabindex="-1"
					id="navbarNavAltMarkup"
					aria-labelledby="navbarNavAltMarkupLabel"
				>
					<div class="offcanvas-header">
						<h5 class="offcanvas-title" id="navbarNavAltMarkupLabel">
							Navigation Menu
						</h5>
						<button
							type="button"
							class="btn-close"
							data-bs-dismiss="offcanvas"
							aria-label="Close"
						></button>
					</div>
					<div class="offcanvas-body">
						<nav class="nav flex-column">
							<a class="nav-link active" aria-current="page" href="/">Home</a>
							<a class="nav-link" href="/admin/login">Login</a>
						</nav>
					</div>
				</div>
			</div>
		</nav>

		{{{body}}}

		<footer class="footer">
			<section class="container footer-content py-5">
				<div class="row">
					<div class="col-lg-3 mb-4 mb-lg-0">
						<h4 class="brand-title">{{appName}}</h4>
					</div>
					<div class="col-lg-3 mb-4 mb-lg-0">
						<h4>Web Reference</h4>
						<ul class="nav flex-column">
							<li class="nav-item">
								<a
									class="nav-link"
									href="https://www.freepik.com/free-vector/abstract-flowing-waves-background_6910766.htm#query=abstract%20waves&position=26&from_view=keyword&track=ais&uuid=20062fb8-cb8b-4316-9f7b-9988b4aedf7c"
								>
									Bg Illustration by kjpargeter on Freepik
								</a>
							</li>
						</ul>
					</div>

					<div class="col-lg-3 mb-4 mb-lg-0">
						<h4>Reach Us</h4>
						<ul class="nav flex-column flex-nowrap">
							<li class="nav-item">
								<span class="nav-link">Sidoarjo, East Java. Indonesia</span>
							</li>
							<li class="nav-item">
								<span class="nav-link">jimpitan@gmail.com</span>
							</li>
						</ul>
					</div>
					<div class="col-lg-3">
						<h4>Social Media</h4>
						<div class="socmed-links">
							<a
								class="socmed-link socmed-link--linkedin btn rounded-circle"
								href="https://www.linkedin.com/in/addin-cendekia-9b4a92173/"
								target="_blank"
							>
								<i class="bi bi-facebook"></i>
							</a>
							<a
								class="socmed-link socmed-link--instagram btn rounded-circle"
								href="https://www.instagram.com/addincendekia/?hl=id"
								target="_blank"
							>
								<i class="bi bi-instagram"></i>
							</a>
						</div>
					</div>
				</div>
			</section>

			<section class="copyright py-3">
				<p class="mb-0 text-center">
					Copyright
					<strong>Project Cendekia</strong>
				</p>
			</section>
		</footer>

		<script src="/js/front.js"></script>
	</body>
</html>