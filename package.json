{
  "name": "jimpitan",
  "version": "1.0.0",
  "description": "Website for reporting & collecting jimpitan (deposit) from residents based on their live",
  "main": "dist/app.mjs",
  "type": "module",
  "scripts": {
    "build": "concurrently \"rm -rf dist\" \"npm run tsc\" \"npm run copyfiles\"",
    "dev": "concurrently \"rm -rf dist\" \"npm run copyfiles\" \"tsc --watch\" \"npm run copyfiles:watch\" \"nodemon dist/app.mjs\"",
    "start": "node dist/app.mjs",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc -p tsconfig.json",
    "copyfiles": "copyfiles -u 1 src/**/*.hbs dist",
    "copyfiles:watch": "chokidar \"src/**/*.hbs\" -c \"npm run copyfiles\""
  },
  "author": "addin cendekia",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.17.3",
    "handlebars-layouts": "^3.1.4",
    "method-override": "^3.0.0",
    "moment": "^2.30.1",
    "mysql2": "^3.7.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "sequelize": "^6.35.2",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@addincendekia/template-gradfull": "^2.1.1",
    "@faker-js/faker": "^8.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-flash": "^0.0.40",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/method-override": "^0.0.35",
    "@types/node": "^20.11.0",
    "@types/passport-local": "^1.0.38",
    "admin-lte": "3.2",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2"
  }
}
